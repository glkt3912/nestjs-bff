# バックエンド API の接続先
BACKEND_API_BASE_URL=http://localhost:8080

# swagger.json の取得先（gen:all スクリプト用）
BACKEND_SWAGGER_URL=http://localhost:8080/swagger.json

# 認証方式: api-key | bearer | none（デフォルト: none）
AUTH_TYPE=none

# API Key 方式（AUTH_TYPE=api-key のとき使用）
BACKEND_API_KEY=

# Bearer Token 方式（AUTH_TYPE=bearer のとき使用）
BACKEND_BEARER_TOKEN=

# HTTP タイムアウト（ミリ秒）
HTTP_TIMEOUT=5000

# BFF サーバーのポート
PORT=3000

# レート制限
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# モック・スタブモード（true にするとバックエンド不要でフィクスチャを返す）
MOCK_MODE=false

# ログレベル（trace / debug / info / warn / error / fatal）
LOG_LEVEL=info

# JWT 認証（クライアント→BFF 間）
# true にすると JwtAuthGuard が有効になり、@Public() のないエンドポイントで検証を行う
JWT_AUTH_ENABLED=false
JWT_SECRET=
JWT_EXPIRES_IN=3600s
