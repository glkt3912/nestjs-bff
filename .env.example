# バックエンド API の接続先（単一バックエンドの場合）
BACKEND_API_BASE_URL=http://localhost:8080

# 複数バックエンド構成の場合はサービスごとに追加する（createApiProvider 参照）
# USER_SERVICE_BASE_URL=http://user-service:8080
# ORDER_SERVICE_BASE_URL=http://order-service:8080
# PRODUCT_SERVICE_BASE_URL=http://product-service:8080

# swagger.json の取得先（gen:all スクリプト用）
BACKEND_SWAGGER_URL=http://localhost:8080/swagger.json

# 認証方式: api-key | bearer | none（デフォルト: none）
AUTH_TYPE=none

# API Key 方式（AUTH_TYPE=api-key のとき使用）
BACKEND_API_KEY=

# Bearer Token 方式（AUTH_TYPE=bearer のとき使用）
BACKEND_BEARER_TOKEN=

# HTTP タイムアウト（ミリ秒）
HTTP_TIMEOUT=5000

# BFF サーバーのポート
PORT=3000

# レート制限
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# モック・スタブモード（true にするとバックエンド不要でフィクスチャを返す）
MOCK_MODE=false

# ログレベル（trace / debug / info / warn / error / fatal）
LOG_LEVEL=info

# JWT 認証（クライアント→BFF 間）
# true にすると JwtAuthGuard が有効になり、@Public() のないエンドポイントで検証を行う
JWT_AUTH_ENABLED=false
JWT_SECRET=

# ファイルアップロード上限（バイト）デフォルト: 10 MB
UPLOAD_MAX_FILE_SIZE=10485760

# レスポンスキャッシュ（CACHE_TTL: 秒。極力短くする場合は 1 を指定）
CACHE_TTL=30
CACHE_STORE=memory

# Redis（CACHE_STORE=redis のとき使用）
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0
